---
import Layout from "../layouts/Layout.astro";

const str = "Junior";
const num = 27;
const obj = {
  name: str,
  number: num,
  favorites: ["astro", "tailwind", "js", "ts"],
};

const isVisible = false;

const res = await fetch("https://jsonplaceholder.typicode.com/posts?_limit=5")
const data = await res.json()

const foregroundColor = "hsl(20, 50%, 50%)";
const backgroundColor = "hsl(200, 50%, 50%)";

const isRed = true
---

<Layout title="Welcome to Astro.">
  <h2>{str}</h2>
  <p>{num}</p>
  <p>{obj.favorites[2]}</p>

	<br />

  <ul>
    {obj.favorites.map((favorite) => <li> - {favorite}</li>)}
  </ul>

  <br />

  <p>
    {isVisible ? obj.favorites[1] : obj.favorites[0]}
  </p>

	<br />
	
	<ul>
		{data.map((item: { title: string; }) => <li>* {item.title}</li>)}
    <!-- {data.map((item) => <li>* {item.title}</li>)} -->
  </ul>

	<br />

	<p class:list={["big", {red: isRed}]}>hi from</p>

	<br />

  <i class='bx bx-user text-white'></i>

</Layout>

